{
    "name": "webfiori/oauth",
    "description": "OAuth2 client library for PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "WebFiori\\OAuth\\": "WebFiori/OAuth/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebFiori\\Tests\\OAuth\\": "tests/WebFiori/Tests/OAuth/"
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "scripts": {
        "test": "cd tests && ../vendor/bin/phpunit --configuration=phpunit.xml",
        "test10": "cd tests && ../vendor/bin/phpunit --configuration=phpunit10.xml",
        "fix-cs": "vendor/bin/php-cs-fixer fix --config=php_cs.php.dist"
    }
}
